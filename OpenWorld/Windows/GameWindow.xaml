<Window x:Class="OpenWorld.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:OpenWorld.Controls"
        xmlns:controls1="clr-namespace:Kalavarda.Primitives.WPF.Controls;assembly=Kalavarda.Primitives.WPF"
        Title="Game" Height="800" Width="1200" Background="Black"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="Debug">
                <MenuItem Header="Hero..." Click="OnHeroDebugWindowClick"/>
            </MenuItem>
        </Menu>
        
        <controls:GameControl x:Name="_gameControl" Grid.Row="1" ClipToBounds="True"/>
        <controls1:RangeControl x:Name="_heroHP" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="100" Width="400" Height="40" MainBrush="Green" Grid.Row="1"/>
    </Grid>
</Window>
