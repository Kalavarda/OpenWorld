<Window x:Class="OpenWorld.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:OpenWorld.Controls"
        Title="Game" Height="450" Width="800" Background="Black"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="Debug">
                <MenuItem Header="Hero..." Click="OnHeroDebugWindowClick"/>
            </MenuItem>
        </Menu>
        
        <controls:GameControl x:Name="_gameControl" Grid.Row="1"/>
    </Grid>
</Window>
